extends layout

block content
  h1= title
  h2= subtitle

  if currencies.length === 0 && cryptos.length === 0
    p.error No hay datos disponibles. Intenta de nuevo m√°s tarde.

  else
    form.converter-form(action="/convert" method="POST")
      .form-group
        label(for="amount") Cantidad
        input#amount(type="number" name="amount" required)
      .form-group
        label Desde
        select(name="fromCurrency")
          if currencies && currencies.length
            each currency in currencies
              option(value=currency)= currency
          if cryptos && cryptos.length
            each crypto in cryptos
              option(value=crypto)= crypto
      .form-group
        label Hacia
        select(name="toCurrency")
          if currencies && currencies.length
            each currency in currencies
              option(value=currency)= currency
          if cryptos && cryptos.length
            each crypto in cryptos
              option(value=crypto)= crypto
      button(type="submit") Convertir

    if result
      .result= result
