extends layout

block content
  h1= title
  h2= subtitle

  form.converter-form(action="/convert" method="POST")
    .form-row
      .form-group
        label(for="amount") Cantidad
        input#amount(type="text" name="amount" placeholder="Ingresa la cantidad" required)
    .form-row
      .form-group
        label Desde la Divisa
        select(name="fromCurrency")
          if cryptoOptions && cryptoOptions.length > 0
            each option in cryptoOptions
              option(value=option.symbol) #{option.symbol} ($#{option.rate})
          else
            option No hay criptomonedas disponibles
      .form-group
        label A la Divisa
        select(name="toCurrency")
          if cryptoOptions && cryptoOptions.length > 0
            each option in cryptoOptions
              option(value=option.symbol) #{option.symbol} ($#{option.rate})
          else
            option No hay criptomonedas disponibles
    .form-row
      button.convert-button(type="submit") Convertir
